<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#8BC34A</item>

    </style>

    <style name="CodeEditText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/nameTextColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="CodeTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/runsTextColor</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">35sp</item>

    </style>

    <style name="CodeSmallTextTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/runsTextColor</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="ButtonStyles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/points_marginBottom</item>
        <item name="android:layout_marginLeft">@dimen/points_marginLeft</item>
        <item name="android:layout_marginStart">@dimen/points_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/points_marginRight</item>
        <item name="android:layout_marginEnd">@dimen/points_marginRight</item>

    </style>
</resources>
